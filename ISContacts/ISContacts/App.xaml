<Application x:Class="ISContacts.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="NavButton">
            <Setter Property="FontFamily" Value="Trebuchet" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Control.Background" Value="BlanchedAlmond" />
            <Setter Property="Control.Foreground" Value="ForestGreen" />
            <Setter Property="Control.Padding" Value="5" />
        </Style>
        <Style TargetType="TextBlock" x:Key="TitleBlock">
            <Setter Property="FontFamily" Value="Trebuchet" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Control.HorizontalAlignment" Value="Center" />
            <Setter Property="Control.VerticalAlignment" Value="Center" />
            <Setter Property="Control.Margin" Value="5" />
        </Style>
    </Application.Resources>
</Application>
